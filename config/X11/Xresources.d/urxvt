!!! Enable perl extensions
URxvt.perl-ext-common:		default,matcher,clipboard,-searchable-scrollback

!!! Scrolling options
! Do not scroll with output
URxvt*scrollTtyOutput:		false

! Scroll in relation to buffer
URxvt*scrollWithBuffer:		true

! Scroll to bottom on keypress
URxvt*scrollTtyKeypress:	true

URxvt*scrollBar:		false
URxvt*scrollBar_right:		false
URxvt*scrollBar_floating:	false

! Better scrolling in a pager
URxvt*secondaryScreen:		1
URxvt*secondaryScroll:		0


!!! Disable ISO modes
URxvt.iso14755:			false
URxvt.iso14755_52:		false

!!! Copy paste
URxvt.keysym.C-C: 		perl:clipboard:copy
URxvt.keysym.C-V: 		perl:clipboard:paste
URxvt.keysym.C-A-V:	 	perl:clipboard:paste_escaped

!!! Clickable URLs
URxvt.url-launcher:		/usr/bin/google-chrome-stable
URxvt.matcher.button:		1

!!! Font settings
Xft.antialias:			true
Xft.hintstyle:			hintfull
Xft.autohint:			true
Xft.hinting:			true
URxvt.font:			xft:Droid Sans Mono:pixelsize=11:Regular
URxvt.letterspace:		-1

!!! Current color scheme
#include "colorschemes/hybrid"
