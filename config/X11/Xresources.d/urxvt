!!! Enable perl extensions
URxvt.perl-ext-common:		default,matcher,-searchable-scrollback,resize-font

!!! Scrolling options
! Do not scroll with output
URxvt*scrollTtyOutput:		false

! Scroll in relation to buffer
URxvt*scrollWithBuffer:		true

! Scroll to bottom on keypress
URxvt*scrollTtyKeypress:	true

URxvt*scrollBar:		    false
URxvt*scrollBar_right:		false
URxvt*scrollBar_floating:	false

! Better scrolling in a pager
URxvt*secondaryScreen:		1
URxvt*secondaryScroll:		0

URxvt*altSendsEscape: true

!!! Disable ISO modes
URxvt.iso14755:			false
URxvt.iso14755_52:		false

!!! Dont use block cursor
URxvt.cursorUnderline: 1

!!! Copy paste
! URxvt.clipboard.autocopy: true
! URxvt.keysym.C-c: 		perl:clipboard:copy
! URxvt.keysym.C-v: 		perl:clipboard:paste
! URxvt.keysym.C-A-v:	 	perl:clipboard:paste_escaped

!!! Clickable URLs
URxvt.url-launcher:		    /usr/bin/firefox
URxvt.matcher.button:		1

!!! Change font size on the fly
URxvt.resize-font.smaller: C-Down
URxvt.resize-font.bigger: C-Up


!!! Font settings
Xft.antialias:			true
Xft.hintstyle:			hintfull
Xft.autohint:			true
Xft.hinting:			true
URxvt.letterSpace:      0
URxvt.font:			    xft:DroidSansMono Nerd Font Mono:size=11

!!! Current color scheme
#include "colorschemes/hybrid"
